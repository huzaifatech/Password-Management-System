<%- include('header') %>

  <div class="container">
    <div id="signupbox" style="border: dashed 3px; width: 400px;" class="center-block">
        <h1 style="text-align: center;">Edit Category</h1>
        <form class="form-horizontal" method="POST" action="/passwordcategory/edit/:id" style="text-align: center;">
          <input type="hidden" name="id" value="<%= id %>">
          <input type="text" name="passwordCategory" value="<%= records.password_category %>" placeholder=" New Category"><br><br>
          <input class="btn btn-success" value="Update Category" type="submit" placeholder="Enter"><br><br>
          <p><a href="/passwordcategory">'Cancel'</a></p>
        </form>
    </div>
    <%- include('footer') %>
